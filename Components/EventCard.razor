@inject NavigationManager Navigation

<div class="event-card" @onclick="NavigateToDetails">
  <div class="event-card-header">
    <h3 class="event-name">@EventData.Name</h3>
  </div>
  <div class="event-card-body">
    <div class="event-detail">
      <span class="icon">ğŸ“…</span>
      <span class="label">Date:</span>
      <span class="value">@EventData.Date.ToString("dddd, MMMM dd, yyyy")</span>
    </div>
    <div class="event-detail">
      <span class="icon">ğŸ“…</span>
      <span class="label">Time:</span>
      <span class="value">@EventData.Date.ToString("hh:mm tt")</span>
    </div>
    <div class="event-detail">
      <span class="icon">ğŸ“</span>
      <span class="label">Location:</span>
      <span class="value">@EventData.Location</span>
    </div>
    @if (!string.IsNullOrWhiteSpace(EventData.Description))
    {
      <div class="event-description">
        <p>@(EventData.Description.Length > 120 ? EventData.Description.Substring(0, 120) + "..." : EventData.Description)
        </p>
      </div>
    }
    <div class="event-card-footer">
      <button class="btn-view-details" @onclick="NavigateToDetails" @onclick:stopPropagation="true">
        View Details â†’
      </button>
    </div>
  </div>
</div>

@code {
  [Parameter]
  public Event EventData { get; set; } = new Event();

  private void NavigateToDetails()
  {
    Navigation.NavigateTo($"/events/{EventData.Id}");
  }
}